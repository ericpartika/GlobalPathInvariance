#include <ros/ros.h>
#include <std_msgs/String.h>
#include <AdeelPkg/GradStudent.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main (int argc, char **argv)
{

	ros::init(argc, argv, "AdeelPublisher"); //Initiliazing a ros node
	ros::NodeHandle nh; //Creating ros nodehandles

	//ros::Publisher pub = nh.advertise<std_msgs::String>("myowntopic", 5);
	ros::Publisher pub = nh.advertise<AdeelController::GradStudent>("myowntopic", 5);
	
	ros::Rate r(1); // 10 hz


	AdeelController::GradStudent msg;
	
	int i;
	i=1;
	while(ros::ok())
	{
		msg.header.stamp = ros::Time::now();
		msg.gender = true;
		msg.name="Adeel";
		msg.age=i;
		ROS_INFO("Hello"); // Just like a printf statement
		pub.publish(msg);

		i++;
		ros::spinOnce();
		r.sleep();
	}
		return 0;


}
